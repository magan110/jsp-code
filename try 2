        'data': {
          'token': 'mock_jwt_token_${DateTime.now().millisecondsSinceEpoch}',
          'user': {
            'id': userId,
            'name': 'User Name',
            'email': '$userId@example.com',
          },
        },
      };
    }

    return {'success': false, 'error': 'Invalid credentials'};
  }

