                      setState(() {
                        activityController.text = newValue ?? '';
                        if (newValue == 'Painter Meet') {
                          if (painterList.isEmpty) _addPainterRow();
                        } else {
                          painterList.clear();
                        }
                      });
                    },

                    isRequired: true,
                  ),

                  const SizedBox(height: 20),
                  _buildModernTextField(
