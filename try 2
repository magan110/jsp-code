                var reasons = _dbHelper.WebSessBean(sql, new Dictionary<string, object>());
                return Ok(new { success = true, data = reasons });
            }
            catch (Exception ex)
            {
                return BadRequest(new { success = false, message = ex.Message });
            }
        }

