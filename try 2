                  const SizedBox(height: 20),
                  ModernDropdown(
                    label: 'District',
                    icon: Icons.location_city_outlined,
                    items: ['Select', 'District 2', 'District 3'],
                    value: districtController.text.isEmpty
                        ? null
                        : districtController.text,
                    onChanged: (String? newValue) {
