  Future<String> _readTextFile() async {
    try {
      final file = File(widget.filePath!);
      return await file.readAsString();
    } catch (e) {
      throw Exception('Failed to read file: $e');
    }
  }

  Future<Uint8List> _getPdfBytes(String filePath) async {
    print('ðŸ” GET PDF BYTES DEBUG:');
    print('   Input path: $filePath');
    print('   Path type analysis:');
    print('     - Is HTTP: ${filePath.startsWith('http')}');
    print('     - Is data URL: ${filePath.startsWith('data:')}');
    print('     - Is file path: ${!filePath.startsWith('http') && !filePath.startsWith('data:')}');

    try {
      // Check if it's a URL
      if (filePath.startsWith('http://') || filePath.startsWith('https://')) {
        print('   ðŸ“¥ Downloading from URL...');
        final response = await http.get(Uri.parse(filePath));
        print('   ðŸ“¥ Download response: ${response.statusCode}');
        if (response.statusCode != 200) {
          throw Exception('Failed to download PDF: ${response.statusCode}');
        }
        print('   ðŸ“¥ Downloaded ${response.bodyBytes.length} bytes');
        return response.bodyBytes;
      } else if (filePath.startsWith('data:')) {
        print('   ðŸ“„ Processing data URL...');
        final parts = filePath.split(',');
        if (parts.length != 2) {
          throw Exception('Invalid data URL format');
        }
        print('   ðŸ“„ Data URL header: ${parts[0]}');
        final bytes = base64Decode(parts[1]);
        print('   ðŸ“„ Decoded ${bytes.length} bytes from data URL');
        return bytes;
      } else {
        print('   ðŸ“ Reading local file...');
        final file = File(filePath);
        final exists = await file.exists();
        print('   ðŸ“ File exists: $exists');
        if (!exists) {
          throw Exception('File does not exist: $filePath');
        }
        final bytes = await file.readAsBytes();
        print('   ðŸ“ Read ${bytes.length} bytes from local file');
        return bytes;
      }
    } catch (e) {
      print('   âŒ Error in _getPdfBytes: $e');
      rethrow;
    }
  }

  void _showFileDetails(BuildContext context) {
    final file = File(widget.filePath!);

    showDialog(
      context: context,
      builder: (context) => AlertDialog(
        shape: RoundedRectangleBorder(borderRadius: BorderRadius.circular(16)),
        title: Row(
          children: [
            Icon(_getFileIcon(widget.filePath!), color: Colors.blue),
            const SizedBox(width: 8),
            const Text('File Details'),
          ],
        ),
        content: Column(
          mainAxisSize: MainAxisSize.min,
          crossAxisAlignment: CrossAxisAlignment.start,
          children: [
            _buildDetailRow('Name', _getFileName(widget.filePath!)),
            _buildDetailRow(
              'Type',
              _getFileExtension(widget.filePath!).toUpperCase(),
            ),
            _buildDetailRow('Size', _getFileSize(widget.filePath!)),
            _buildDetailRow('Path', widget.filePath!),
            if (!kIsWeb) ...[
              const SizedBox(height: 8),
              FutureBuilder<FileStat>(
                future: file.stat(),
                builder: (context, snapshot) {
                  if (snapshot.hasData) {
                    final stat = snapshot.data!;
                    return Column(
                      children: [
                        _buildDetailRow('Modified', _formatDate(stat.modified)),
                        _buildDetailRow('Accessed', _formatDate(stat.accessed)),
                      ],
                    );
                  }
                  return const SizedBox.shrink();
                },
              ),
            ],
          ],
        ),
        actions: [
          TextButton(
            onPressed: () => Navigator.pop(context),
            child: const Text('Close'),
          ),
          if (_isImageFile(widget.filePath!))
            TextButton(
              onPressed: () {
                Navigator.pop(context);
                _showFullScreenImage(context);
              },
              child: const Text('View Full Size'),
            ),
        ],
      ),
    );
  }

  Widget _buildDetailRow(String label, String value) {
    return Padding(
      padding: const EdgeInsets.symmetric(vertical: 4),
      child: Row(
        crossAxisAlignment: CrossAxisAlignment.start,
        children: [
          SizedBox(
            width: 80,
            child: Text(
              '$label:',
              style: const TextStyle(
                fontWeight: FontWeight.w500,
                color: Colors.grey,
              ),
            ),
          ),
          Expanded(
            child: Text(
              value,
              style: const TextStyle(fontWeight: FontWeight.w400),
            ),
          ),
        ],
      ),
    );
  }

  void _confirmRemove(BuildContext context) {
    showDialog(
      context: context,
      builder: (context) => AlertDialog(
        shape: RoundedRectangleBorder(borderRadius: BorderRadius.circular(16)),
        title: const Row(
          children: [
            Icon(Icons.warning, color: Colors.orange),
            SizedBox(width: 8),
            Text('Remove File'),
          ],
        ),
        content: Text(
          'Are you sure you want to remove "${_getFileName(widget.filePath!)}"?',
        ),
        actions: [
          TextButton(
            onPressed: () => Navigator.pop(context),
            child: const Text('Cancel'),
          ),
          TextButton(
            onPressed: () {
              Navigator.pop(context);
              widget.onRemove?.call();
            },
            style: TextButton.styleFrom(foregroundColor: Colors.red),
            child: const Text('Remove'),
          ),
        ],
      ),
    );
  }

  String _getFileName(String path) {
    return path.split('/').last;
  }

  String _getFileExtension(String path) {
    return path.split('.').last.toLowerCase();
  }

  String _getFileSize(String path) {
    if (kIsWeb) return 'Unknown size';

    try {
      final file = File(path);
      final bytes = file.lengthSync();
      if (bytes < 1024) return '$bytes B';
      if (bytes < 1024 * 1024) return '${(bytes / 1024).toStringAsFixed(1)} KB';
      return '${(bytes / (1024 * 1024)).toStringAsFixed(1)} MB';
    } catch (e) {
      return 'Unknown size';
    }
  }

  String _formatDate(DateTime date) {
    return '${date.day}/${date.month}/${date.year} ${date.hour}:${date.minute.toString().padLeft(2, '0')}';
  }

  bool _isImageFile(String path) {
    final extension = _getFileExtension(path);
    return ['jpg', 'jpeg', 'png', 'gif', 'bmp', 'webp'].contains(extension);
  }

  IconData _getFileIcon(String path) {
    final extension = _getFileExtension(path);
    switch (extension) {
      case 'pdf':
        return Icons.picture_as_pdf;
      case 'doc':
      case 'docx':
        return Icons.description;
      case 'xls':
      case 'xlsx':
        return Icons.table_chart;
      case 'ppt':
      case 'pptx':
        return Icons.slideshow;
      case 'txt':
        return Icons.text_snippet;
      case 'zip':
      case 'rar':
        return Icons.archive;
      case 'jpg':
      case 'jpeg':
      case 'png':
      case 'gif':
      case 'bmp':
      case 'webp':
        return Icons.image;
      case 'mp4':
      case 'avi':
      case 'mov':
        return Icons.video_file;
      case 'mp3':
      case 'wav':
      case 'flac':
        return Icons.audio_file;
      default:
        return Icons.insert_drive_file;
    }
  }

  void _tryAlternativePdfViewer(BuildContext context) {
    Navigator.of(context).push(
      MaterialPageRoute(
        builder: (context) => Scaffold(
          appBar: AppBar(
            title: Text('${widget.label} - Alternative Viewer'),
            backgroundColor: Colors.red.shade600,
            foregroundColor: Colors.white,
          ),
          body: _buildWebPdfViewer(),
        ),
      ),
    );
  }

  void _downloadPdfFile() async {
    if (kIsWeb && widget.filePath!.startsWith('data:')) {
      try {
        // For data URLs on web, trigger download
        final parts = widget.filePath!.split(',');
        if (parts.length == 2) {
          final fileName = _getFileName(widget.filePath!);

          // Create download link using data URL directly
          final anchor = web.HTMLAnchorElement()
            ..href = widget.filePath!
            ..download = fileName
            ..style.display = 'none';

          // Add to DOM, click, then remove
          web.document.body!.appendChild(anchor);
          anchor.click();
          web.document.body!.removeChild(anchor);

          if (mounted) {
            ScaffoldMessenger.of(context).showSnackBar(
              SnackBar(
                content: Text('Downloaded $fileName'),
                backgroundColor: Colors.green,
              ),
            );
          }
        }
      } catch (e) {
        print('âŒ Download failed: $e');
        if (mounted) {
          ScaffoldMessenger.of(context).showSnackBar(
            SnackBar(
              content: Text('Download failed: $e'),
              backgroundColor: Colors.red,
            ),
          );
        }
      }
    }
  }
}

class _PdfViewer extends StatefulWidget {
  final PdfDocument document;
  final String fileName;

  const _PdfViewer({required this.document, required this.fileName});

  @override
  State<_PdfViewer> createState() => _PdfViewerState();
}

class _PdfViewerState extends State<_PdfViewer> {
  late PdfController _pdfController;
  int _currentPage = 1;
  int _totalPages = 0;

  @override
  void initState() {
    super.initState();
    _pdfController = PdfController(document: Future.value(widget.document));
    _getTotalPages();
  }

  @override
  void dispose() {
    _pdfController.dispose();
    super.dispose();
  }

  void _getTotalPages() async {
    final pagesCount = widget.document.pagesCount;
    setState(() {
      _totalPages = pagesCount;
    });
  }

  @override
  Widget build(BuildContext context) {
    return Column(
      children: [
        // PDF Controls
        Container(
          padding: const EdgeInsets.symmetric(horizontal: 16, vertical: 8),
          decoration: BoxDecoration(
            color: Colors.grey.shade100,
            borderRadius: BorderRadius.circular(8),
          ),
          child: Row(
            mainAxisAlignment: MainAxisAlignment.spaceBetween,
            children: [
              Text(
                widget.fileName,
                style: const TextStyle(
                  fontSize: 14,
                  fontWeight: FontWeight.w500,
                ),
              ),
              Row(
                children: [
                  IconButton(
                    onPressed: _currentPage > 1 ? _previousPage : null,
                    icon: const Icon(Icons.chevron_left),
                    tooltip: 'Previous Page',
                  ),
                  Container(
                    padding: const EdgeInsets.symmetric(
                      horizontal: 12,
                      vertical: 4,
                    ),
                    decoration: BoxDecoration(
                      color: Colors.white,
                      borderRadius: BorderRadius.circular(4),
                      border: Border.all(color: Colors.grey.shade300),
                    ),
                    child: Text(
                      '$_currentPage / $_totalPages',
                      style: const TextStyle(
                        fontSize: 12,
                        fontWeight: FontWeight.w500,
                      ),
                    ),
                  ),
                  IconButton(
                    onPressed: _currentPage < _totalPages ? _nextPage : null,
                    icon: const Icon(Icons.chevron_right),
                    tooltip: 'Next Page',
                  ),
                  IconButton(
                    onPressed: () => _showZoomControls(context),
                    icon: const Icon(Icons.zoom_in),
                    tooltip: 'Zoom Controls',
                  ),
                ],
              ),
            ],
          ),
        ),
        const SizedBox(height: 8),
        // PDF Viewer
        Expanded(
          child: Container(
            decoration: BoxDecoration(
              border: Border.all(color: Colors.grey.shade300),
              borderRadius: BorderRadius.circular(8),
            ),
            child: ClipRRect(
              borderRadius: BorderRadius.circular(7),
              child: PdfView(
                controller: _pdfController,
                onPageChanged: (page) {
                  setState(() {
                    _currentPage = page;
                  });
                },
                onDocumentLoaded: (document) {
                  // Document loaded successfully
                },
                onDocumentError: (error) {
                  ScaffoldMessenger.of(context).showSnackBar(
                    SnackBar(
                      content: Text('Error loading PDF: $error'),
                      backgroundColor: Colors.red,
                    ),
                  );
                },
                scrollDirection: Axis.vertical,
                physics: const BouncingScrollPhysics(),
              ),
            ),
          ),
        ),
      ],
    );
  }

  void _previousPage() {
    if (_currentPage > 1) {
      _pdfController.previousPage(
        duration: const Duration(milliseconds: 300),
        curve: Curves.easeInOut,
      );
    }
  }

  void _nextPage() {
    if (_currentPage < _totalPages) {
      _pdfController.nextPage(
        duration: const Duration(milliseconds: 300),
        curve: Curves.easeInOut,
      );
    }
  }

  void _showZoomControls(BuildContext context) {
    showDialog(
      context: context,
      builder: (context) => AlertDialog(
        title: const Text('Zoom Controls'),
        content: Column(
          mainAxisSize: MainAxisSize.min,
          children: [
            ListTile(
              leading: const Icon(Icons.zoom_in),
              title: const Text('Zoom In'),
              onTap: () {
                Navigator.pop(context);
                // Note: Zoom functionality depends on the PDF viewer implementation
                ScaffoldMessenger.of(context).showSnackBar(
                  const SnackBar(content: Text('Zoom in functionality')),
                );
              },
            ),
            ListTile(
              leading: const Icon(Icons.zoom_out),
              title: const Text('Zoom Out'),
              onTap: () {
                Navigator.pop(context);
                // Note: Zoom functionality depends on the PDF viewer implementation
                ScaffoldMessenger.of(context).showSnackBar(
                  const SnackBar(content: Text('Zoom out functionality')),
                );
              },
            ),
            ListTile(
              leading: const Icon(Icons.fit_screen),
              title: const Text('Fit to Screen'),
              onTap: () {
                Navigator.pop(context);
                // Reset zoom to default
              },
            ),
          ],
        ),
        actions: [
          TextButton(
            onPressed: () => Navigator.pop(context),
            child: const Text('Close'),
          ),
        ],
      ),
    );
  }
}






































